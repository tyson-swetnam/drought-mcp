# US Drought Monitor MCP Server Configuration

# Server Configuration
LOG_LEVEL=info
CACHE_TTL_SECONDS=86400  # 24 hours (USDM updates weekly)

# Data Source Configuration
USDM_DATA_FORMAT=json  # json, geojson, or csv
ENABLE_HISTORICAL_ANALYSIS=true

# Optional: Custom cache settings
# CACHE_MAX_SIZE=500
# CACHE_CLEANUP_INTERVAL=3600

# Optional: Geographic data handling
ENABLE_GEOJSON_PROCESSING=true
COORDINATE_PRECISION=4  # Decimal places for lat/lon

# Optional: API endpoints (defaults provided)
# USDM_API_BASE_URL=https://usdmdataservices.unl.edu/api
# USDM_GIS_DATA_URL=https://droughtmonitor.unl.edu/DmData/GISData.aspx
